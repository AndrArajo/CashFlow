{
  "openapi": "3.0.0",
  "info": {
    "title": "CashFlow API",
    "description": "API para gerenciamento de fluxo de caixa, transações e balanços diários.\n\n## Autenticação\n\nAs APIs são protegidas por autenticação JWT (JSON Web Token). Para obter um token, faça uma requisição POST para `/api/v1/login` com as credenciais apropriadas. Todas as demais chamadas devem incluir o cabeçalho `Authorization` com o token.\n\nExemplo:\n```\nAuthorization: Bearer eyJhbGciOiJSUzI1NiIsIn...\n```\n\nOs tokens têm validade de 24 horas (86400 segundos).",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "API Gateway Kong"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Obter Token JWT",
        "description": "Autentica o usuário e retorna um token JWT para acesso às APIs",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": ["grant_type", "client_id", "client_secret", "username", "password"],
                "properties": {
                  "grant_type": {
                    "type": "string",
                    "enum": ["password"],
                    "description": "Tipo de concessão OAuth (use 'password')"
                  },
                  "client_id": {
                    "type": "string",
                    "description": "ID do cliente (use 'kong-gateway')"
                  },
                  "client_secret": {
                    "type": "string",
                    "description": "Segredo do cliente (use 'kong-client-secret')"
                  },
                  "username": {
                    "type": "string",
                    "description": "Nome do usuário (padrão: usuario_padrao)"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "Senha do usuário (padrão: senha123)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string",
                      "description": "Token JWT para autenticação"
                    },
                    "expires_in": {
                      "type": "integer",
                      "description": "Tempo em segundos até a expiração do token",
                      "example": 86400
                    },
                    "refresh_token": {
                      "type": "string",
                      "description": "Token para renovação do acesso"
                    },
                    "token_type": {
                      "type": "string",
                      "description": "Tipo do token",
                      "example": "bearer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        },
        "security": []
      }
    },
    "/auth/.well-known/openid-configuration": {
      "get": {
        "summary": "Obter Configuração OpenID Connect",
        "description": "Retorna a configuração OpenID Connect do provedor",
        "tags": ["Autenticação"],
        "responses": {
          "200": {
            "description": "Configuração obtida com sucesso"
          }
        },
        "security": []
      }
    },
    "/auth/certs": {
      "get": {
        "summary": "Obter Chaves Públicas JWT",
        "description": "Retorna as chaves públicas para validação de tokens JWT",
        "tags": ["Autenticação"],
        "responses": {
          "200": {
            "description": "Chaves obtidas com sucesso"
          }
        },
        "security": []
      }
    },
    "/transaction": {
      "get": {
        "summary": "Obter Todas Transações",
        "description": "Obtém todas as transações",
        "responses": {
          "200": {
            "description": "Lista de transações retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Registrar Transação",
        "description": "Registra uma nova transação financeira e a envia para o Kafka",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransactionInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transação criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          }
        }
      }
    },
    "/transaction/paginated": {
      "get": {
        "summary": "Obter Transações Paginadas",
        "description": "Obtém transações com paginação simples",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Número da página"
          },
          {
            "name": "size",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            },
            "description": "Tamanho da página (máximo 10)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada de transações retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transaction/{id}": {
      "get": {
        "summary": "Obter Transação por ID",
        "description": "Obtém uma transação pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID da transação"
          }
        ],
        "responses": {
          "200": {
            "description": "Transação encontrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transaction"
                }
              }
            }
          },
          "404": {
            "description": "Transação não encontrada"
          }
        }
      }
    },
    "/daily-balance/{date}": {
      "get": {
        "summary": "Obter Balanço por Data",
        "description": "Retorna o balanço diário para uma data específica.",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data no formato YYYY-MM-DD"
          }
        ],
        "responses": {
          "200": {
            "description": "Balanço encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DailyBalance"
                }
              }
            }
          },
          "404": {
            "description": "Balanço não encontrado para a data especificada"
          }
        }
      }
    },
    "/daily-balance/period": {
      "get": {
        "summary": "Obter Balanços por Período",
        "description": "Retorna os balanços diários para um período específico.",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data inicial no formato YYYY-MM-DD"
          },
          {
            "name": "endDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data final no formato YYYY-MM-DD"
          }
        ],
        "responses": {
          "200": {
            "description": "Balanços encontrados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DailyBalance"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros de data inválidos"
          }
        }
      }
    },
    "/daily-balance/paginated": {
      "get": {
        "summary": "Obter Balanços Paginados",
        "description": "Retorna uma lista paginada de balanços diários.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Número da página para consulta paginada"
          },
          {
            "name": "size",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Tamanho da página para consulta paginada"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada de balanços retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DailyBalance"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/daily-balance/process/{date}": {
      "post": {
        "summary": "Processar Balanço por Data",
        "description": "Processa o balanço diário para uma data específica.",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data no formato YYYY-MM-DD"
          }
        ],
        "responses": {
          "200": {
            "description": "Balanço processado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DailyBalance"
                }
              }
            }
          },
          "404": {
            "description": "Não foram encontradas transações para a data especificada"
          }
        }
      }
    },
    "/daily-balance/process-range": {
      "post": {
        "summary": "Processar Balanços por Período",
        "description": "Processa os balanços diários para um período específico.",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data inicial no formato YYYY-MM-DD"
          },
          {
            "name": "endDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data final no formato YYYY-MM-DD"
          }
        ],
        "responses": {
          "200": {
            "description": "Balanços processados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DailyBalance"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros de data inválidos"
          }
        }
      }
    },
    "/daily-balance/summary/{date}": {
      "get": {
        "summary": "Obter Resumo do Balanço por Data",
        "description": "Retorna um resumo do balanço diário para uma data específica.",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Data no formato YYYY-MM-DD"
          }
        ],
        "responses": {
          "200": {
            "description": "Resumo do balanço encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DailyBalance"
                }
              }
            }
          },
          "404": {
            "description": "Balanço não encontrado para a data especificada"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT obtido através do endpoint de login"
      }
    },
    "schemas": {
      "TransactionInput": {
        "type": "object",
        "required": ["amount", "type"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Descrição da transação"
          },
          "amount": {
            "type": "number",
            "format": "double",
            "description": "Valor da transação (deve ser maior que zero)"
          },
          "type": {
            "type": "integer",
            "enum": [0, 1],
            "description": "Tipo da transação conforme enum TransactionType: (0 = Credit/Crédito, 1 = Debit/Débito)"
          },
          "origin": {
            "type": "string",
            "description": "Origem da transação"
          },
          "transactionDate": {
            "type": "string",
            "format": "date-time",
            "description": "Data da transação (opcional, padrão é a data atual)"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único da transação"
          },
          "description": {
            "type": "string",
            "description": "Descrição da transação"
          },
          "amount": {
            "type": "number",
            "format": "double",
            "description": "Valor da transação"
          },
          "type": {
            "type": "integer",
            "enum": [0, 1],
            "description": "Tipo da transação conforme enum TransactionType: (0 = Credit/Crédito, 1 = Debit/Débito)"
          },
          "origin": {
            "type": "string",
            "description": "Origem da transação"
          },
          "transactionDate": {
            "type": "string",
            "format": "date-time",
            "description": "Data da transação"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do registro"
          }
        }
      },
      "DailyBalance": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único do balanço"
          },
          "balanceDate": {
            "type": "string",
            "format": "date-time",
            "description": "Data do balanço"
          },
          "finalBalance": {
            "type": "number",
            "format": "double",
            "description": "Saldo final"
          },
          "previousBalance": {
            "type": "number",
            "format": "double",
            "description": "Saldo anterior"
          },
          "totalCredits": {
            "type": "number",
            "format": "double",
            "description": "Total de créditos"
          },
          "totalDebits": {
            "type": "number",
            "format": "double",
            "description": "Total de débitos"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de criação do registro"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Data de atualização do registro"
          }
        }
      }
    }
  }
} 